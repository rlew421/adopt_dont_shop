<h1>List of Shelters</h1>

<% @shelters.each do |shelter| %>
  <section id= 'shelter-<%=shelter.id%>'>
    <ul>
      <li><%= link_to "#{shelter.name}", "/shelters/#{shelter.id}" %></li>
      <li><%= link_to "Edit #{shelter.name}", "/shelters/#{shelter.id}/edit" %></li>
      <li><%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %></li>
    </ul>
  </section>
<% end %>

<%= link_to 'Add New Shelter', '/shelters/new' %>
