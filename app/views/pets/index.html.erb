<h1>All Pets</h1>

<% @pets.each do |pet| %>
  <section id= 'pet-<%=pet.id%>'>
    <ul>
      <img src= <%= pet.image %>>
      <li>Name: <%= pet.name %></li>
      <li>Age: <%= pet.approximate_age %></li>
      <li>Sex: <%= pet.sex %></li>
      <% if @shelter %>
        <p><%= link_to "Edit #{pet.name}", "/shelters/#{pet.shelter.id}/pets/#{pet.id}/edit" %></p>
      <% else %>
        <li>Current Shelter: <%= pet.current_shelter %></li>
        <p><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %></p>
      <% end %>
    </ul>
  </section>
<% end %>

<% if @shelter %>
  <%= link_to 'Add New Adoptable Pet', "/shelters/#{@shelter.id}/pets/new" %>
<% end %>
